<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.rizk.firebaseexamplelogin.LoginActivity">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_username"

        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/et_pwd"
        android:layout_alignStart="@+id/et_pwd"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="42dp"
        android:hint="User Name"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="User Name" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_pwd"

        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginLeft="65dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="14dp"
        android:hint="Passwrod"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:text="don't have account?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/tv_account"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/et_pwd"
        android:layout_marginTop="22dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:pb_colorComplete="@color/green_complete"
        app:pb_colorError="@color/red_error"
        app:pb_colorNormal="@color/blue_normal"
        app:pb_colorPressed="@color/blue_pressed"
        app:pb_colorProgress="@color/purple_progress"
        app:pb_cornerRadius="20dp"
        app:pb_textComplete="Success"
        app:pb_textError="Error"
        app:pb_textProgress="Loading" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/icon" />



</RelativeLayout>
